NODE_ENV=development
PORT=3000
DATABASE_URL="postgresql://username:password@localhost:5432/gaming_platform"

# Epic Games OAuth
EPIC_CLIENT_ID=your_epic_client_id
EPIC_CLIENT_SECRET=your_epic_client_secret
EPIC_REDIRECT_URI=http://localhost:3000/auth/epic/callback

# Session
SESSION_SECRET=your_super_secret_session_key_change_this_in_production

# File Upload
MAX_FILE_SIZE=100000000
UPLOAD_DIR=./uploads

# Admin
ADMIN_EPIC_IDS=epic_id_1,epic_id_2

# Rate Limiting
SUBMISSION_LIMIT_PER_DAY=10
REQUEST_LIMIT_WINDOW=15